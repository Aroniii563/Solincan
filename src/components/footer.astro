---
import Logo from "../img/logoFinal.png";
---

<body>
  <footer id="footer">
    <div class="footer-container">
      <!-- Navegación -->
      <div class="footer-nav">
        <h3>Explora</h3>
        <div class="footer-links">
          <ul>
            <li><a href="/">Inicio</a></li>
            <li><a href="/services">Servicios</a></li>
            <li><a href="/about">Sobre Solincan</a></li>
            <li><a href="/soluciones">Soluciones</a></li>
            <li><a href="/proyects">Casos De Éxito</a></li>
          </ul>
          <ul>
            <li><a href="/privacidad">Políticas De Privacidad</a></li>
            <li><a href="/terminos">Términos De Uso</a></li>
          </ul>
        </div>

        <div class="footer-social">
          <a href="#"><i class="fa-brands fa-facebook-f"></i></a>
          <a href="#"><i class="fa-brands fa-x-twitter"></i></a>
          <a href="#"><i class="fa-brands fa-instagram"></i></a>
        </div>
      </div>

      <!-- Suscripción -->
      <div class="footer-newsletter">
        <h3>Suscríbete a nuestro boletín</h3>
        <form onSubmit="event.preventDefault()">
          <input type="email" placeholder="Correo electrónico" required />
          <button type="submit">EMPEZAR</button>
        </form>
      </div>
    </div>

    <hr />

    <div class="footer-copy">
      © 2025 Solincan. Todos los derechos reservados.
    </div>
  </footer>

  <script>
     document.addEventListener("DOMContentLoaded", () => {
        const currentPath = window.location.pathname.replace(/^\/|\/$/g, "").toLowerCase();
        const links = document.querySelectorAll(".footer-links a");

        links.forEach(link => {
        const href = link.getAttribute("href").replace(/^\/|\/$/g, "").toLowerCase();
        if (currentPath === href || (currentPath === "" && href === "index")) {
            link.classList.add("active");
        }
        });
    });
  </script>
</body>

<style>
  #footer {
    background-color: #02511a;
    color: white;
    padding: 60px 20px 30px;
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  }

  .footer-links a.active {
    color: #f15a24;
    font-weight: bold;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 40px;
  }

  .footer-nav {
    flex: 1 1 300px;
  }

  .footer-nav h3 {
    font-size: 1.3rem;
    margin-bottom: 20px;
  }

  .footer-links {
    display: flex;
    gap: 60px;
    margin-bottom: 20px;
  }

  .footer-links ul {
    list-style: none;
    padding: 0;
  }

  .footer-links a {
    color: white;
    text-decoration: none;
    font-size: 0.95rem;
    display: block;
    margin-bottom: 10px;
    transition: color 0.2s;
  }

  .footer-links a:hover {
    color: #f15a24;
  }

  .footer-social a {
    color: white;
    margin-right: 15px;
    font-size: 1.2rem;
    transition: color 0.2s;
  }

  .footer-social a:hover {
    color: #f15a24;
  }

  .footer-newsletter {
    flex: 1 1 300px;
  }

  .footer-newsletter h3 {
    font-size: 1.3rem;
    margin-bottom: 20px;
  }

  .footer-newsletter form {
    display: flex;
    border: 1px solid #ccc;
    border-radius: 2px;
    overflow: hidden;
  }

  .footer-newsletter input {
    flex: 1;
    padding: 12px;
    border: none;
    outline: none;
    font-size: 1rem;
    background: transparent;
  }

  .footer-newsletter button {
    background-color: #004d40;
    color: white;
    padding: 12px 20px;
    border: none;
    cursor: pointer;
    font-weight: bold;
    text-transform: uppercase;
    transition: background-color 0.3s;
  }

  .footer-newsletter button:hover {
    background-color: #00332d;
  }

  hr {
    margin: 40px 0 20px;
    border: none;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
  }

  .footer-copy {
    text-align: center;
    font-size: 0.9rem;
    color: #ddd;
  }

  @media (width < 768px) {
    .footer-container {
      flex-direction: column;
      align-items: flex-start;
    }

    .footer-links {
      flex-direction: column;
      gap: 20px;
    }

    .footer-newsletter form {
      flex-direction: column;
    }

    .footer-newsletter button {
      width: 100%;
    }
  }
</style>
