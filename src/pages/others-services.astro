    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
    gap: 50px;
    flex-wrap: wrap;
  }

  .tgss-texto {
    flex: 1;
    min-width: 300px;
  }

  .tgss-titulo {
