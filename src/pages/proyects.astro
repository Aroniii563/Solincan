<style>
  /* ==== ESTILOS GLOBALES ==== */
  main {
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    background-color: #ffffff;
    color: #111;
    margin: 0;
    padding: 0;
    margin-top: 100px;
  }

  h1,
  h2,
  h3 {
    margin: 0 0 15px;
  }

  h3 {
    color: #ea580c;
  }

  p {
    margin: 0 0 15px;
  }

  a {
    text-decoration: none;
  }

  .success-section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 4rem 1rem;
  }

  .success-title {
    font-size: 5rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .success-description {
    max-width: 700px;
    font-size: 1.5rem;
    margin-bottom: 2rem;
  }

  .success-button {
    background-color: #f97316;
    color: white;
    font-weight: 500;
    padding: 1rem 2rem;
    border-radius: 0.5rem;
    text-decoration: none;
    transition: background-color 0.3s;
  }

  .success-button:hover {
    background-color: #ea580c;
  }

  .hotel-section {
    display: flex;
    align-items: center;
    justify-content: space-around;
    padding: 4rem;
    background-image: url(../img/fondo-naranja.jpg);
    background-size: cover;
    background-position: center;
    margin: 20px 0 20px 0;
  }

  .hotel-content {
    max-width: 500px;
  }

  .hotel-content h3 {
    font-size: 1.8rem;
    margin-bottom: 1rem;
  }

  .hotel-content p {
    font-size: 1rem;
    line-height: 1.6;
  }

  .hotel-image img {
    width: 250px;
    height: 250px;
    object-fit: cover;
    border-radius: 50%;
    clip-path: circle(45%);
  }

  .financial-section {
    display: flex;
    align-items: center;
    justify-content: space-around;
    padding: 4rem;
    background-image: url(../img/fondo-naranja.jpg);
    background-size: cover;
    background-position: center;
    margin: 20px 0 20px 0;
  }

  .financial-content {
    max-width: 500px;
  }

  .financial-content h3 {
    font-size: 1.8rem;
    margin-bottom: 1rem;
  }

  .financial-content p {
    font-size: 1rem;
    line-height: 1.6;
  }

  .financial-image img {
    width: 250px;
    height: 250px;
    object-fit: cover;
    border-radius: 50%;
    clip-path: circle(45%);
  }

  .industrial-section {
    display: flex;
    align-items: center;
    justify-content: space-around;
    padding: 4rem;
    background-image: url(../img/fondo-naranja.jpg);
    background-size: cover;
    background-position: center;
    margin: 20px 0 20px 0;
  }

  .industrial-content {
    max-width: 500px;
  }

  .industrial-content h3 {
    font-size: 1.8rem;
    margin-bottom: 1rem;
  }

  .industrial-content p {
    font-size: 1rem;
    line-height: 1.6;
  }

  .industrial-image img {
    width: 250px;
    height: 250px;
    object-fit: cover;
    border-radius: 50%;
    clip-path: circle(45%);
  }

  .partners-section {
    padding: 7rem 1rem;
    text-align: center;
    background-color: #ffffff;
  }

  .partners-section h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
  }

  .logos-container {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .logos-container img {
    height: 100px;
    object-fit: contain;
  }

  .contact-section {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 4rem;
    background-color: #f5f5f5;
  }

  .contact-box {
    background-color: #ff6600;
    border-radius: 10px;
    padding: 3rem;
    text-align: center;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    position: relative;
  }

  .contact-box::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 500px;
    height: 500px;
    background-color: #e9e9e9;
    border-radius: 50%;
    z-index: -1;
  }

  .contact-form {
    background-color: white;
    padding: 2rem;
    border-radius: 10px;
    margin-top: 1rem;
  }

  .contact-form input {
    width: 100%;
    padding: 0.75rem;
    margin-bottom: 1rem;
    border: 1px solid #ddd;
    border-radius: 5px;
  }

  .contact-form button {
    background-color: #ff6600;
    color: white;
    padding: 0.75rem;
    width: 100%;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .contact-form button:hover {
    background-color: #e55b00;
  }

  .contact-title {
    color: white;
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .contact-info {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
    color: #ff6600;
    font-weight: bold;
  }

  .contact-info span {
    margin-left: 0.5rem;
  }

  /* Animaciones de entrada */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .success-section,
  .hotel-section,
  .financial-section,
  .industrial-section,
  .partners-section,
  .contact-section {
    opacity: 0;
    animation: fadeInUp 1s ease forwards;
  }

  /* Tablet (hasta 1024px) */
  @media (max-width: 1024px) {
    .success-section,
    .hotel-section,
    .financial-section,
    .industrial-section,
    .partners-section,
    .contact-section {
      flex-direction: column;
      padding: 2rem;
    }

    .success-title,
    .hotel-content h3,
    .financial-content h3,
    .industrial-content h3,
    .partners-section h2,
    .contact-title {
      font-size: 1.8rem;
    }

    .success-description,
    .hotel-content p,
    .financial-content p,
    .industrial-content p {
      font-size: 1rem;
      text-align: center;
    }

    .hotel-content,
    .financial-content,
    .industrial-content,
    .partners-section {
      max-width: 100%;
      text-align: center;
    }

    .hotel-image img,
    .financial-image img,
    .industrial-image img {
      width: 180px;
      height: 180px;
      margin-bottom: 1.5rem;
    }

    .logos-container {
      gap: 1.5rem;
    }

    .logos-container img {
      height: 45px;
    }

    .contact-box {
      width: 90%;
      padding: 2rem;
    }

    .contact-box::before {
      width: 400px;
      height: 400px;
    }

    .contact-form {
      padding: 1.5rem;
    }
  }

  /* M贸vil (hasta 768px) */
  @media (max-width: 768px) {
    .success-section,
    .hotel-section,
    .financial-section,
    .industrial-section,
    .partners-section,
    .contact-section {
      flex-direction: column;
      padding: 1.5rem;
    }

    .success-title,
    .hotel-content h3,
    .financial-content h3,
    .industrial-content h3,
    .partners-section h2,
    .contact-title {
      font-size: 1.5rem;
    }

    .success-description,
    .hotel-content p,
    .financial-content p,
    .industrial-content p {
      font-size: 0.9rem;
      text-align: center;
    }

    .hotel-image img,
    .financial-image img,
    .industrial-image img {
      width: 150px;
      height: 150px;
      margin-bottom: 1rem;
    }

    .logos-container {
      gap: 1rem;
    }

    .logos-container img {
      height: 40px;
    }

    .contact-box {
      width: 100%;
      padding: 1.5rem;
    }

    .contact-box::before {
      width: 300px;
      height: 300px;
    }

    .contact-form {
      padding: 1rem;
    }

    .contact-form input,
    .contact-form button {
      font-size: 0.9rem;
    }
  }
</style>
